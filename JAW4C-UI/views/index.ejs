<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JAW4C Analysis Dashboard</title>
    <link rel="stylesheet" href="/style.css?v=3">
</head>
<body>
    <div class="container">
        <header>
            <h1>JAW4C Analysis Dashboard</h1>
            <a href="<%= neo4jUrl %>" target="_blank" class="neo4j-link">Open Neo4j Browser</a>
        </header>

        <section class="global-stats">
            <div class="stat-card stat-card-clickable" onclick="openLibDetectionModal()">
                <h2><%= globalStats.sites %></h2>
                <p>Sites Analyzed</p>
            </div>
            <div class="stat-card stat-card-clickable" onclick="filterSitesWithFlows()">
                <h2><%= globalStats.sitesWithFlows %></h2>
                <p>Sites with Flows</p>
            </div>
            <div class="stat-card stat-card-clickable" onclick="openVulnLibModal()">
                <h2><%= globalStats.vulnerableLibs %></h2>
                <p>Vulnerable Libraries</p>
            </div>
            <div class="stat-card">
                <h2><%= globalStats.pocMatches %></h2>
                <p>POC Matches</p>
            </div>
        </section>

        <!-- Filter Controls -->
        <section class="filter-section">
            <h3>Filters & Search</h3>
            <div class="search-container">
                <div class="search-mode-selector">
                    <label class="search-mode-option">
                        <input type="radio" name="search-mode" value="url" checked onchange="switchSearchMode()">
                        <span>URL/Hash</span>
                    </label>
                    <label class="search-mode-option">
                        <input type="radio" name="search-mode" value="content" onchange="switchSearchMode()">
                        <span>File Content (Regex)</span>
                    </label>
                </div>
                <div class="search-box">
                    <input type="text" id="search-input" placeholder="Search by URL or hash..." onkeyup="handleSearchInput()">
                    <button id="search-btn" class="search-execute-btn" style="display: none;" onclick="executeFileContentSearch()">Search</button>
                </div>
                <div id="search-options" class="search-options" style="display: none;">
                    <input type="text" id="file-pattern" placeholder="File pattern (e.g., *.js or 0.js)" value="*.js">
                    <label class="search-checkbox">
                        <input type="checkbox" id="regex-mode" checked>
                        <span>Regex</span>
                    </label>
                    <label class="search-checkbox">
                        <input type="checkbox" id="case-sensitive">
                        <span>Case Sensitive</span>
                    </label>
                </div>
            </div>
            <div class="filter-controls">
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-flows" onchange="applyFilters()">
                    <span>Has Flows</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-lib-detection" onchange="applyFilters()">
                    <span>Has lib.detection.json</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-sink-flows" onchange="applyFilters()">
                    <span>Has sink.flows.out</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-vuln-out" onchange="applyFilters()">
                    <span>Has vuln.out</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-error-log" onchange="applyFilters()">
                    <span>Has errors.log</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-warning-log" onchange="applyFilters()">
                    <span>Has warnings.log</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-reviewed" onchange="applyFilters()">
                    <span>Reviewed</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-unreviewed" onchange="applyFilters()">
                    <span>Not Reviewed</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-vulnerable" onchange="applyFilters()">
                    <span>Marked Vulnerable</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-has-notes" onchange="applyFilters()">
                    <span>Has Notes</span>
                </label>
                <button onclick="clearFilters()" class="clear-filters-btn">Clear All Filters</button>
            </div>
            <div class="view-controls">
                <label>View Mode:</label>
                <button id="view-normal-btn" class="view-btn active" onclick="switchView('normal')">Normal</button>
                <button id="view-notes-btn" class="view-btn" onclick="switchView('notes')">Notes View</button>
            </div>
            <div class="sort-controls">
                <label>Sort by:</label>
                <select id="sort-select" onchange="applySorting()">
                    <option value="default">Default</option>
                    <optgroup label="Last Modified">
                        <option value="modified-desc" selected>Newest First</option>
                        <option value="modified-asc">Oldest First</option>
                    </optgroup>
                    <optgroup label="Name">
                        <option value="name-asc">A-Z</option>
                        <option value="name-desc">Z-A</option>
                    </optgroup>
                    <optgroup label="Flows">
                        <option value="flows-desc">High to Low</option>
                        <option value="flows-asc">Low to High</option>
                    </optgroup>
                    <optgroup label="Vulnerable Libraries">
                        <option value="vulns-desc">High to Low</option>
                        <option value="vulns-asc">Low to High</option>
                    </optgroup>
                    <optgroup label="POC Matches">
                        <option value="pocs-desc">High to Low</option>
                        <option value="pocs-asc">Low to High</option>
                    </optgroup>
                    <optgroup label="JS Files">
                        <option value="js-count-desc">High to Low</option>
                        <option value="js-count-asc">Low to High</option>
                    </optgroup>
                </select>
            </div>
            <div class="results-count">
                Showing <span id="visible-count">0</span> of <%= sites.length %> sites
            </div>
        </section>

        <section class="site-list">
            <% sites.forEach(site => { %>
                <div class="site-item"
                     data-modified-time="<%= site.modifiedTime %>"
                     data-reviewed="<%= site.reviewed %>"
                     data-vulnerable="<%= site.vulnerable %>"
                     data-has-lib-detection="<%= site.hasLibDetection %>"
                     data-has-sink-flows="<%= site.hasSinkFlows %>"
                     data-has-vuln-out="<%= site.hasVulnOut %>"
                     data-has-error-log="<%= site.hasErrorLog %>"
                     data-has-warning-log="<%= site.hasWarningLog %>"
                     data-has-notes="<%= site.memo && site.memo.trim() ? 'true' : 'false' %>"
                     data-search-text="<%= (site.domain + ' ' + site.urlPath + ' ' + site.originalUrl + ' ' + site.hash).toLowerCase() %>"
                     data-hash="<%= site.hash %>"
                     data-name="<%= site.domain %>"
                     data-flows="<%= site.hasFlows ? 1 : 0 %>"
                     data-vulns="<%= site.vulnerableLibs %>"
                     data-pocs="<%= site.pocMatches %>"
                     data-js-count="<%= site.jsFiles ? site.jsFiles.length : 0 %>">
                    <div class="site-header" onclick="toggleDetails('<%= site.hash %>')">
                        <div class="site-name-wrapper">
                            <div class="site-domain" title="<%= site.originalUrl %>"><%= site.domain %></div>
                            <% if (site.urlPath) { %><div class="site-path"><%= site.urlPath %></div><% } %>
                            <div class="file-badges">
                                <% if (site.hasLibDetection) { %><span class="badge badge-lib">LIB</span><% } %>
                                <% if (site.hasSinkFlows) { %><span class="badge badge-flows">FLOWS</span><% } %>
                                <% if (site.hasVulnOut) { %><span class="badge badge-vuln">VULN</span><% } %>
                                <% if (site.hasErrorLog) { %><span class="badge badge-error">ERR</span><% } %>
                                <% if (site.hasWarningLog) { %><span class="badge badge-warn">WARN</span><% } %>
                            </div>
                        </div>
                        <div class="site-summary">
                            <span>Flows: <span class="indicator <%= site.hasFlows ? 'yes' : 'no' %>"><%= site.hasFlows ? 'Yes' : 'No' %></span></span>
                            <span>Vuln Libs: <%= site.vulnerableLibs %></span>
                            <span>POCs: <%= site.pocMatches %></span>
                        </div>
                        <span class="expand-icon" id="icon-<%= site.hash %>">+</span>
                    </div>
                    <% if (site.memo && site.memo.trim()) { %>
                    <div class="site-note-inline" style="display: none;">
                        <div class="note-label">üìù Note:</div>
                        <div class="note-content"><%= site.memo %></div>
                    </div>
                    <% } %>
                    <div class="site-details" id="details-<%= site.hash %>">
                        <p><strong>URL:</strong> <a href="<%= site.originalUrl %>" target="_blank"><%= site.originalUrl %></a></p>
                        <p><strong>Hash:</strong> <%= site.hash %></p>

                        <div class="review-section">
                            <h4>Review Status</h4>
                            <div class="review-controls-inline">
                                <div class="review-checkboxes">
                                    <label class="review-checkbox">
                                        <input type="checkbox"
                                               id="reviewed-<%= site.hash %>"
                                               <%= site.reviewed ? 'checked' : '' %>
                                               onchange="updateReview('<%= site.hash %>', 'reviewed', this.checked)">
                                        <span>Reviewed</span>
                                    </label>
                                    <label class="review-checkbox vulnerable-checkbox">
                                        <input type="checkbox"
                                               id="vulnerable-<%= site.hash %>"
                                               <%= site.vulnerable ? 'checked' : '' %>
                                               onchange="updateReview('<%= site.hash %>', 'vulnerable', this.checked)">
                                        <span>Vulnerable</span>
                                    </label>
                                </div>
                                <div class="memo-section-inline">
                                    <label for="memo-<%= site.hash %>"><strong>Notes:</strong></label>
                                    <textarea id="memo-<%= site.hash %>"
                                              class="memo-textarea"
                                              placeholder="Add notes..."
                                              onchange="updateReview('<%= site.hash %>', 'memo', this.value)"><%= site.memo %></textarea>
                                </div>
                            </div>
                        </div>

                        <% if (site.jsFiles && site.jsFiles.length > 0) { %>
                        <div class="js-files-section">
                            <h4 class="js-files-header" onclick="toggleJsFiles('<%= site.hash %>')">
                                <span class="expand-icon-small" id="js-icon-<%= site.hash %>">‚ñ∂</span>
                                JavaScript Files (<%= site.jsFiles.length %>)
                            </h4>
                            <div class="js-files-dropdown" id="js-files-<%= site.hash %>" style="display: none;">
                                <div class="js-files-grid">
                                    <% site.jsFiles.forEach(file => { %>
                                        <a href="#" class="js-file-link" onclick="loadFile('<%= site.hash %>', '<%= file %>'); return false;"><%= file %></a>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                        <% } %>

                        <h4>Analysis Files</h4>
                        <ul class="file-list">
                            <% site.files.forEach(file => { %>
                                <li><a href="#" onclick="loadFile('<%= site.hash %>', '<%= file %>'); return false;"><%= file %></a></li>
                            <% }); %>
                        </ul>
                        <div class="file-content-wrapper" id="wrapper-<%= site.hash %>" style="display: none;">
                            <div class="file-header">
                                <span class="current-file" id="current-file-<%= site.hash %>"></span>
                                <button class="view-toggle-btn" id="toggle-<%= site.hash %>" onclick="toggleView('<%= site.hash %>'); return false;" style="display: none;">
                                    Switch to Raw View
                                </button>
                            </div>
                            <pre class="file-content" id="content-<%= site.hash %>"></pre>
                        </div>
                    </div>
                </div>
            <% }); %>
        </section>
    </div>

    <!-- Library Detection Modal -->
    <div id="lib-detection-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Library Detection Statistics</h2>
                <span class="modal-close" onclick="closeLibDetectionModal()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="stats-grid">
                    <div class="stat-box">
                        <h3 id="total-detected-libs">-</h3>
                        <p>Total Detected Libraries</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="unique-detected-libs">-</h3>
                        <p>Unique Libraries</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="sites-with-detections">-</h3>
                        <p>Sites with Detections</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="avg-libs-per-site">-</h3>
                        <p>Avg Libraries per Site</p>
                    </div>
                </div>

                <div class="charts-container">
                    <div class="chart-wrapper">
                        <h3>Top 15 Detected Libraries</h3>
                        <canvas id="top-detected-libs-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Detection Method Distribution</h3>
                        <canvas id="detection-method-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Top Library Versions</h3>
                        <canvas id="detected-versions-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Accuracy Distribution</h3>
                        <canvas id="accuracy-chart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vulnerable Libraries Modal -->
    <div id="vuln-lib-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Vulnerable Libraries Statistics</h2>
                <span class="modal-close" onclick="closeVulnLibModal()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="stats-grid">
                    <div class="stat-box">
                        <h3 id="total-vuln-libs">-</h3>
                        <p>Total Vulnerable Libraries</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="unique-libs">-</h3>
                        <p>Unique Libraries</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="sites-with-vulns">-</h3>
                        <p>Sites with Vulnerabilities</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="avg-vulns-per-site">-</h3>
                        <p>Avg Vulns per Site</p>
                    </div>
                </div>

                <div class="charts-container">
                    <div class="chart-wrapper">
                        <h3>Top 10 Vulnerable Libraries</h3>
                        <canvas id="top-libs-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Vulnerability Types Distribution</h3>
                        <canvas id="vuln-types-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Library Versions Distribution</h3>
                        <canvas id="versions-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Confidence Score Distribution</h3>
                        <canvas id="confidence-chart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="/main.js?v=2"></script>
</body>
</html>
