<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JAW4C Analysis Dashboard</title>
    <link rel="stylesheet" href="/style.css?v=3">
</head>
<body>
    <div class="container">
        <header>
            <h1>JAW4C Analysis Dashboard</h1>
            <div class="header-actions">
                <button onclick="refreshStats()" class="refresh-btn" id="refresh-btn" title="Refresh statistics">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                        <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
                    </svg>
                    Refresh Stats
                </button>
                <a href="<%= neo4jUrl %>" target="_blank" class="neo4j-link">Open Neo4j Browser</a>
            </div>
        </header>

        <section class="global-stats">
            <div class="stat-card stat-card-clickable" onclick="openLibDetectionModal()">
                <h2><%= globalStats.sites %></h2>
                <p>Sites Analyzed</p>
            </div>
            <div class="stat-card stat-card-clickable" onclick="filterSitesWithFlows()">
                <h2><%= globalStats.sitesWithFlows %></h2>
                <p>Sites with Flows</p>
            </div>
            <div class="stat-card stat-card-clickable" onclick="openVulnLibModal()">
                <h2><%= globalStats.vulnerableLibs %></h2>
                <p>Vulnerable Libraries</p>
            </div>
            <div class="stat-card">
                <h2><%= globalStats.pocMatches %></h2>
                <p>POC Matches</p>
            </div>
        </section>

        <!-- Filter Controls -->
        <section class="filter-section">
            <h3>Filters & Search</h3>
            <div class="search-container">
                <div class="search-mode-selector">
                    <label class="search-mode-option">
                        <input type="radio" name="search-mode" value="url" checked onchange="switchSearchMode()">
                        <span>URL/Hash</span>
                    </label>
                    <label class="search-mode-option">
                        <input type="radio" name="search-mode" value="content" onchange="switchSearchMode()">
                        <span>File Content (Regex)</span>
                    </label>
                </div>
                <div class="search-box">
                    <input type="text" id="search-input" placeholder="Search by URL or hash..." onkeydown="handleSearchKeydown(event)">
                    <button id="search-btn" class="search-execute-btn" onclick="executeSearch()">Search</button>
                </div>
                <div id="search-options" class="search-options" style="display: none;">
                    <input type="text" id="file-pattern" placeholder="File pattern (e.g., *.js or 0.js)" value="*.js">
                    <label class="search-checkbox">
                        <input type="checkbox" id="regex-mode" checked>
                        <span>Regex</span>
                    </label>
                    <label class="search-checkbox">
                        <input type="checkbox" id="case-sensitive">
                        <span>Case Sensitive</span>
                    </label>
                </div>
            </div>
            <div class="filter-controls">
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-flows" onchange="reloadWithFilters()">
                    <span>Has Flows</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-lib-detection" onchange="reloadWithFilters()">
                    <span>Has lib.detection.json</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-sink-flows" onchange="reloadWithFilters()">
                    <span>Has sink.flows.out</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-vuln-out" onchange="reloadWithFilters()">
                    <span>Has Vulnerabilities</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-error-log" onchange="reloadWithFilters()">
                    <span>Has errors.log</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-warning-log" onchange="reloadWithFilters()">
                    <span>Has warnings.log</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-reviewed" onchange="reloadWithFilters()">
                    <span>Reviewed</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-unreviewed" onchange="reloadWithFilters()">
                    <span>Not Reviewed</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-vulnerable" onchange="reloadWithFilters()">
                    <span>Marked Vulnerable</span>
                </label>
                <label class="filter-checkbox">
                    <input type="checkbox" id="filter-has-notes" onchange="reloadWithFilters()">
                    <span>Has Notes</span>
                </label>
                <button onclick="clearSelections()" class="clear-filters-btn">Clear All Selections</button>
            </div>
            <div class="time-selection-controls">
                <label>Time Range:</label>
                <div class="time-inputs">
                    <input type="datetime-local" id="time-start" placeholder="Start time (optional)">
                    <span class="time-separator">to</span>
                    <input type="datetime-local" id="time-end" placeholder="End time (optional)">
                </div>
                <button onclick="applyTimeSelection()" class="apply-time-btn">Apply Time</button>
                <button onclick="clearTimeSelection()" class="clear-time-btn">Clear</button>
                <span class="time-hint">(Click a site's timestamp to set as end time)</span>
            </div>
            <div class="view-controls">
                <label>View Mode:</label>
                <button id="view-normal-btn" class="view-btn active" onclick="switchView('normal')">Normal</button>
                <button id="view-notes-btn" class="view-btn" onclick="switchView('notes')">Notes View</button>
            </div>
            <div class="sort-controls">
                <label>Sort by:</label>
                <select id="sort-select" onchange="applySorting()">
                    <option value="default">Default</option>
                    <optgroup label="Last Modified">
                        <option value="modified-desc" selected>Newest First</option>
                        <option value="modified-asc">Oldest First</option>
                    </optgroup>
                    <optgroup label="Name">
                        <option value="name-asc">A-Z</option>
                        <option value="name-desc">Z-A</option>
                    </optgroup>
                    <optgroup label="Flows">
                        <option value="flows-desc">High to Low</option>
                        <option value="flows-asc">Low to High</option>
                    </optgroup>
                    <optgroup label="Vulnerable Libraries">
                        <option value="vulns-desc">High to Low</option>
                        <option value="vulns-asc">Low to High</option>
                    </optgroup>
                    <optgroup label="POC Matches">
                        <option value="pocs-desc">High to Low</option>
                        <option value="pocs-asc">Low to High</option>
                    </optgroup>
                    <optgroup label="JS Files">
                        <option value="js-count-desc">High to Low</option>
                        <option value="js-count-asc">Low to High</option>
                    </optgroup>
                </select>
            </div>
            <div class="results-count">
                Showing <span id="visible-count">0</span> of <span id="total-count"><%= totalSites %></span> sites
            </div>
            <div class="pagination-controls">
                <button id="prev-page-btn" onclick="prevPage()" disabled>← Prev</button>
                <div class="page-numbers" id="page-numbers-top">
                    <!-- Page numbers will be generated by JavaScript -->
                </div>
                <button id="next-page-btn" onclick="nextPage()">Next →</button>
                <div class="page-jump">
                    Go to: <input type="number" id="page-input" value="1" min="1" onchange="goToPageInput()">
                </div>
                <span class="page-range" id="page-range"></span>
            </div>
        </section>

        <div id="loading-indicator" class="loading-indicator" style="display: none;">
            <div class="spinner"></div>
            <p>Loading sites...</p>
        </div>

        <section class="site-list" id="site-list">
            <!-- Sites will be loaded dynamically via JavaScript pagination -->
        </section>

        <!-- Bottom pagination controls -->
        <div class="pagination-controls pagination-bottom" id="pagination-bottom">
            <button id="prev-page-btn-bottom" onclick="prevPage()" disabled>← Prev</button>
            <div class="page-numbers" id="page-numbers-bottom">
                <!-- Page numbers will be generated by JavaScript -->
            </div>
            <button id="next-page-btn-bottom" onclick="nextPage()">Next →</button>
        </div>
    </div>

    <!-- Library Detection Modal -->
    <div id="lib-detection-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Library Detection Statistics</h2>
                <span class="modal-close" onclick="closeLibDetectionModal()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="stats-grid">
                    <div class="stat-box">
                        <h3 id="total-detected-libs">-</h3>
                        <p>Total Detected Libraries</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="unique-detected-libs">-</h3>
                        <p>Unique Libraries</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="sites-with-detections">-</h3>
                        <p>Sites with Detections</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="avg-libs-per-site">-</h3>
                        <p>Avg Libraries per Site</p>
                    </div>
                </div>

                <h3 style="margin-top: 2rem;">Vulnerability Tag Statistics</h3>
                <div class="stats-grid">
                    <div class="stat-box">
                        <h3 id="total-tags">-</h3>
                        <p>Total Tags</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="unique-tags">-</h3>
                        <p>Unique Tag Types</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="sites-with-tags">-</h3>
                        <p>Sites with Tags</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="avg-tags-per-site">-</h3>
                        <p>Avg Tags per Site</p>
                    </div>
                </div>

                <div class="charts-container">
                    <div class="chart-wrapper">
                        <h3>Top 15 Detected Libraries</h3>
                        <canvas id="top-detected-libs-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Detection Method Distribution</h3>
                        <canvas id="detection-method-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Top Library Versions</h3>
                        <canvas id="detected-versions-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Accuracy Distribution</h3>
                        <canvas id="accuracy-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Tag Type Distribution</h3>
                        <canvas id="tag-distribution-chart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vulnerable Libraries Modal -->
    <div id="vuln-lib-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Vulnerable Libraries Statistics</h2>
                <span class="modal-close" onclick="closeVulnLibModal()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="stats-grid">
                    <div class="stat-box">
                        <h3 id="total-vuln-libs">-</h3>
                        <p>Total Vulnerable Libraries</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="unique-libs">-</h3>
                        <p>Unique Libraries</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="sites-with-vulns">-</h3>
                        <p>Sites with Vulnerabilities</p>
                    </div>
                    <div class="stat-box">
                        <h3 id="avg-vulns-per-site">-</h3>
                        <p>Avg Vulns per Site</p>
                    </div>
                </div>

                <div class="charts-container">
                    <div class="chart-wrapper">
                        <h3>Top 10 Vulnerable Libraries</h3>
                        <canvas id="top-libs-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Vulnerability Types Distribution</h3>
                        <canvas id="vuln-types-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Library Versions Distribution</h3>
                        <canvas id="versions-chart"></canvas>
                    </div>
                    <div class="chart-wrapper">
                        <h3>Top 20 Detected Libraries</h3>
                        <div id="top-libraries-ranking"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="/main.js?v=2"></script>
</body>
</html>
